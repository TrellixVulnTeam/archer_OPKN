---
timezone:
  hwclock: UTC
  zoneinfo: America/Los_Angeles

locale:
  primary: en_US.UTF-8
  extra: []

hostname:
  name: archer
  aliases: []

initramfs:
  packages:
    - lvm2
  hooks:
    - base
    - udev
    - autodetect
    - modconf
    - block
    - lvm2
    - filesystems
    - keyboard
    - fsck

systemd:
  boot:
    enabled: False
    options:
      - root=/dev/sda2
      - quiet
      - rw
